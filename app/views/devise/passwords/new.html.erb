<div class="flex justify-center items-center h-full">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "bg-transparent p-8 rounded-lg w-80" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <h2 class="mb-4 font-semibold text-xl text-stone-800">Forgot your password?</h2>

<div class="mb-4">
  <%= f.email_field :email, placeholder: "Email", autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring focus:ring-indigo-200 focus:border-indigo-500 transition" %>
</div>

    <div class="flex justify-center">
      <%= f.submit "Send me instructions", class: "px-4 py-2 text-white font-semibold rounded-md bg-purple-800 hover:bg-purple-900 transition cursor-pointer w-full" %>
    </div>

  <% end %>
</div>
