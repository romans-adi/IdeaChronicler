<div class="flex justify-center items-center h-full">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "bg-transparent p-8 rounded-lg w-80" }) do |f| %>
    <div class="mb-4">
      <%= f.email_field :email, placeholder: "Email", autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring focus:ring-indigo-200 focus:border-indigo-500 transition" %>
    </div>

    <div class="mb-6">
      <%= f.password_field :password, placeholder: "Password", autocomplete: "current-password", class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring focus:ring-indigo-200 focus:border-indigo-500 transition" %>
    </div>

<div class="flex justify-center">
  <%= f.submit t('log_in'), class: "px-4 py-2 text-white rounded-md bg-purple-800 hover:bg-purple-900 transition cursor-pointer w-full" %>
</div>
<% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="links">
    <%= render "devise/shared/links" %>
  </div>

  <% end %>
</div>
