<li class="user-item flex items-center border border-black p-4 my-4">
  <div class="user-pic bg-gradient-to-b from-black to-white w-12 h-12 border-2 border-black mr-4"></div>
  <div class="user-info flex-1">
    <h2 class="text-2xl"><a href="<%= user_path(user) %>"><%= user.name %></a></h2>
      <p class="flex justify-end items-center font-semibold text-lg my-1">
        <a class="post-link" href="<%= user_posts_path(user) %>"><%= pluralize(user.posts.count, t('post'), t('posts')) %></a>
      </p>
    </div>
</li>
