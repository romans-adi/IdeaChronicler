<li class="user-item justify-center flex items-center border-2 border-stone-900 rounded-lg p-4 my-4 bg-stone-600">
  <div class="user-pic bg-gradient-to-b from-white to-black w-12 h-12 border-2 border-black mr-4 rounded-xl"></div>
  <div class="user-info flex-1 flex justify-between">
    <h2 class="text-2xl font-semibold text-white"><a href="<%= user_path(user) %>"><%= user.name %></a></h2>
      <p class="flex justify-end items-center font-semibold text-lg my-1">
        <a class="post-link text-white" href="<%= user_posts_path(user) %>"><%= pluralize(user.posts.count, t('post'), t('posts')) %></a>
      </p>
    </div>
</li>
