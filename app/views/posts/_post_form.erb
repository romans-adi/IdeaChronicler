<%= form_with(model: post, url: user_posts_path(@user), id: "post_form", data: { remote: true, target: 'form' }) do |form| %>
  <%= form.hidden_field :author_id, value: user.id %>

  <div class="my-4">
    <%= form.label :title, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :title, class: "w-full border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:border-blue-500" %>
  </div>

  <div class="my-4">
    <%= form.label :text, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_area :text, class: "w-full border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:border-blue-500", rows: 4 %>
  </div>

  <div class="flex items-center justify-center">
    <%= form.submit "Create Post", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  </div>
<% end %>
