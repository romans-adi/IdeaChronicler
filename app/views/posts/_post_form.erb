<%= form_with(model: post, url: user_posts_path(@user), class: "h-5/6", id: "post_form", data: { remote: true, target: 'form' }) do |form| %>
  <%= form.hidden_field :author_id, value: user.id %>

  <div class="my-4 h-full flex flex-col">

    <div class="my-4">
      <%= form.label :title, class: "block text-white text-sm font-bold mb-2" %>
      <%= form.text_field :title, class: "w-full border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:border-blue-500" %>
    </div>

    <div class="my-4 flex-grow">
      <%= form.label :text, class: "block text-white text-sm font-bold mb-2" %>
      <%= form.text_area :text, class: "w-full h-full border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:border-blue-500", rows: 4 %>
    </div>

    <div class="my-8 flex items-center justify-center">
      <%= form.submit "Create Post", class: "z-50 cursor-pointer bg-green-500 hover:bg-green-800 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    </div>

  </div>
<% end %>
