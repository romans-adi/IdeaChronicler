<div class="containter flex flex-col w-4/5 mx-auto my-8">
<div class="user-details">
  <%= render partial: 'users/user_info', locals: { user: @user } %>
  </div>

<% @posts.each do |post| %>
  <div class="post mb-4 p-4 border border-black">
    <h2><%= link_to "Post ##{post.id}", user_post_path(@user, post) %></h2>
    <p class="post-text text-justify flex justify-center m-4"><%= post.text %></p>
    <p class="post-meta flex justify-end items-end">
      <%= t(:likes) %>: <%= post.likes_counter.presence || 0 %>
      <%= t(:comments) %>: <%= post.comments.count %>
    </p>
<div class="comments list-none">
          <ul>
          <% if post.comments.any? %>
            <% post.comments.limit(5).each do |comment| %>
              <li><strong><%= comment.author.name %>:</strong> <%= comment.text %></li>
            <% end %>
          <% else %>
      <li><%= t(:no_comments_yet) %></li>
          <% end %>
        </ul>
    </div>
  </div>
<% end %>
</div>
